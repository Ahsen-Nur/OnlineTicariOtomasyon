@model MVCTicariOtomasyonWeb.Models.sınıflar.Kategori

@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">

    @* Controller'dan gelen tanılama/success mesajları *@
    @if (TempData["DbError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["DbError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }
    @if (TempData["ModelErrors"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["ModelErrors"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Yeni Kategori</h5>
        </div>

        <div class="card-body bg-light">
            <form asp-action="YeniKategori" method="post" class="mt-2">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="KategoriAd" class="form-label fw-semibold">Kategori Adı</label>
                    <input asp-for="KategoriAd" class="form-control" />
                    <span asp-validation-for="KategoriAd" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
