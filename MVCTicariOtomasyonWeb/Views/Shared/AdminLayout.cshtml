<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Online Ticari Otomasyon</title>

    <!--UIcons (Flaticon) -->
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css">
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-bold-rounded/css/uicons-bold-rounded.css">
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-solid-rounded/css/uicons-solid-rounded.css">

    <!--Template CSS bağlantıları -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/template/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom.css" />

    <!--Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Çakışmayı önleyici özel stiller -->
    <style>
        /* Font Awesome ikonları için zorunlu font-family */
        i.fa, i.fas, i.fa-solid, i.fa-fw {
            font-family: "Font Awesome 6 Free" !important;
            font-weight: 900 !important;
        }

        /* Flaticon ikonları için doğru font-family */
        i.fi {
            font-family: 'uicons-regular-rounded' !important;
            font-style: normal;
        }

        /* Bazı bold-solid ikonlar için düzeltme */
        i.fi-br {
            font-family: 'uicons-bold-rounded' !important;
        }

        i.fi-sr {
            font-family: 'uicons-solid-rounded' !important;
        }

        /* Boyut uyumlaması (görsel denge) */
        i.fi, i.fa {
            font-size: 1rem;
            vertical-align: middle;
        }
    </style>
</head>

<body class="sb-nav-fixed">

    <!-- Üst Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="/Kategori/Index">Ticari Otomasyon</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Ara..." aria-label="Search" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>

        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Ayarlar</a></li>
                    <li><a class="dropdown-item" href="#!">Hesabım</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Çıkış Yap</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Sol Menü -->
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">

                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">İşlemler</div>

                        <a class="nav-link" href="/Kategori/Index">
                            <div class="sb-nav-link-icon"><i class="fi fi-br-grid-alt"></i></div>
                            Kategoriler
                        </a>

                        <a class="nav-link" href="/Urun/Index">
                            <div class="sb-nav-link-icon"><i class="fi fi-sr-box-open-full"></i></div>
                            Ürünler
                        </a>

                        <a class="nav-link" href="/Departman/Index">
                            <div class="sb-nav-link-icon"><i class="fi fi-br-building"></i></div>
                            Departmanlar
                        </a>

                        <a class="nav-link" href="/Cariler/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-handshake"></i></div>
                            Cariler
                        </a>

                        <a class="nav-link" href="/Personel/Index">
                            <div class="sb-nav-link-icon"><i class="fi fi-br-users-alt"></i></div>
                            Personeller
                        </a>

                        <!-- Admin İşlemleri -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAdmin"
                           aria-expanded="false" aria-controls="collapseAdmin">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
                            Admin İşlemleri
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <div class="collapse" id="collapseAdmin" aria-labelledby="headingAdmin" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">

                                <!-- Yetkilendirme -->
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                                   data-bs-target="#collapseAuth" aria-expanded="false" aria-controls="collapseAuth">
                                    <i class="fas fa-key me-2"></i>Yetkilendirme
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>

                                <div class="collapse" id="collapseAuth" aria-labelledby="headingAuth" data-bs-parent="#collapseAdmin">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="/Admin/Giris">
                                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                                        </a>
                                        <a class="nav-link" href="/Admin/Kayit">
                                            <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                                        </a>
                                    </nav>
                                </div>

                                <!-- Hata Sayfaları -->
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                                   data-bs-target="#collapseError" aria-expanded="false" aria-controls="collapseError">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Hata Sayfaları
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>

                                <div class="collapse" id="collapseError" aria-labelledby="headingError" data-bs-parent="#collapseAdmin">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="/Admin/Error404">
                                            <i class="fas fa-bug me-2"></i>404 Hatası
                                        </a>
                                        <a class="nav-link" href="/Admin/Error500">
                                            <i class="fas fa-skull-crossbones me-2"></i>500 Hatası
                                        </a>
                                    </nav>
                                </div>

                            </nav>
                        </div>

                        <div class="sb-sidenav-menu-heading">Rapor & Fatura</div>

                        <a class="nav-link" href="/Faturalar/Index">
                            <div class="sb-nav-link-icon"><i class="fi fi-br-file-invoice-dollar"></i></div>
                            Faturalar
                        </a>

                        <a class="nav-link" href="/FaturaKalem/Index">
                            <div class="sb-nav-link-icon"><i class="fi fi-br-receipt"></i></div>
                            Fatura Kalemler
                        </a>

                        <a class="nav-link" href="/Gider/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-money-bill-trend-up"></i></div>
                            Giderler
                        </a>

                        <!-- Hareketler  ve İstatistikler-->
                        <a class="nav-link" href="/Hareketler/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-exchange-alt"></i></div>
                            Hareketler
                        </a>
                        <a class="nav-link" href="/Istatistik/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            İstatistikler
                        </a>

                    </div>
                </div>

            </nav>
        </div>

        <!-- Sayfa İçeriği -->
        <div id="layoutSidenav_content">
            <main class="p-3">
                @RenderBody()
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">© Ticari Otomasyon @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Gizlilik</a> ·
                            <a href="#">Şartlar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/template/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/template/assets/demo/chart-area-demo.js"></script>
    <script src="~/template/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/template/js/datatables-simple-demo.js"></script>
    <script>
        // Tooltip’leri aktif et
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el));
    </script>

    @* >>> GEREKLİ TEK EKLEME: View'lerin tanımladığı Scripts bölümünü yükle *@
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
