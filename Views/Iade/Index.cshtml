@model List<MVCTicariOtomasyonWeb.Models.sınıflar.Iade>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "İade Yönetimi";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="bi bi-arrow-repeat"></i> İade Talepleri
            </h5>
        </div>

        <div class="card-body">

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    Bekleyen iade talebi bulunmamaktadır.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Ürün</th>
                            <th>Cari</th>
                            <th>Talep Tarihi</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.IadeId</td>
                                <td>@i.SatisHareket?.Urun?.UrunAd</td>
                                <td>
                                    @i.SatisHareket?.Cariler?.CariAd
                                    @i.SatisHareket?.Cariler?.CariSoyad
                                </td>
                                <td>@i.TalepTarihi.ToShortDateString()</td>

                                <td>
                                    <span class="badge 
                                        @(i.Durum == "Beklemede" ? "bg-warning" :
                                          i.Durum == "Onaylandı" ? "bg-success" :
                                          "bg-danger")">
                                        @i.Durum
                                    </span>
                                </td>

                                <td>
                                    @if (i.Durum == "Beklemede")
                                    {
                                        <a asp-action="Onayla"
                                           asp-route-id="@i.IadeId"
                                           class="btn btn-sm btn-success me-1"
                                           onclick="return confirm('İade onaylansın mı?')">
                                            Onayla
                                        </a>

                                        <a asp-action="Reddet"
                                           asp-route-id="@i.IadeId"
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('İade reddedilsin mi?')">
                                            Reddet
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>
