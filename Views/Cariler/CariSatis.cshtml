@model List<MVCTicariOtomasyonWeb.Models.sınıflar.SatisHareket>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Cari Satışları";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-bar-chart-line"></i> @ViewBag.CariAd – Satış Geçmişi
            </h5>

            <a asp-controller="Cariler" asp-action="Index"
               class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Geri
            </a>
        </div>

        <div class="card-body">

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    Bu cariye ait satış bulunmuyor.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="table-light text-center">
                            <th>ID</th>
                            <th>Ürün</th>
                            <th>Personel</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr class="text-center">
                                <td>@s.SatisId</td>

                                <td>
                                    @(s.Urun != null ? s.Urun.UrunAd : "-")
                                </td>
                                <td>
                                    @(s.Personel != null
                                        ? s.Personel.PersonelAd + " " + s.Personel.PersonelSoyad
                                        : "Online Satış")
                                </td>
                                <td>@s.Adet</td>
                                <td>@s.Fiyat</td>
                                <td>@s.ToplamTutar</td>
                                <td>@s.Tarih.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                    
                </table>
            }
        </div>
    </div>

    <div class="text-center mt-3 text-muted small">
        © Ticari Otomasyon 2025
    </div>
</div>
