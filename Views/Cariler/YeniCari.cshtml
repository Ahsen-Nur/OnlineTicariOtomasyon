@model MVCTicariOtomasyonWeb.Models.sınıflar.Cariler
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Cari";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-person-plus"></i> Yeni Cari</h5>
        </div>

        <div class="card-body">

            <form asp-action="YeniCari" method="post">

                <div class="mb-3">
                    <label class="form-label">Ad</label>
                    <input asp-for="CariAd" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Soyad</label>
                    <input asp-for="CariSoyad" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Şehir</label>
                    <input asp-for="CariSehir" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mail</label>
                    <input asp-for="CariMail" class="form-control" />
                </div>

                <button class="btn btn-primary">Kaydet</button>
                <a asp-controller="Cariler" asp-action="Index" class="btn btn-secondary">Geri</a>

            </form>

        </div>
    </div>
</div>
