@model MVCTicariOtomasyonWeb.Models.sınıflar.Personel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Personel Güncelle";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0 rounded-3">

        <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i> Personel Bilgilerini Güncelle
            </h5>

            <a asp-controller="Personel" asp-action="Index"
               class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left me-1"></i> Geri
            </a>
        </div>

        <div class="card-body bg-light">

            <!-- ⭐⭐ EN ÖNEMLİ KISIM: ROUTE ID EKLENDİ ⭐⭐ -->
            <form asp-action="Guncelle" asp-route-id="@Model.PersonelId" method="post" class="mt-2">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PersonelId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Ad</label>
                    <input asp-for="PersonelAd" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Soyad</label>
                    <input asp-for="PersonelSoyad" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Görsel URL</label>
                    <input asp-for="PersonelGorsel" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Departman</label>

                    <select asp-for="DepartmanId"
                            asp-items="@(new SelectList(ViewBag.Departmanlar, "Value", "Text", Model.DepartmanId))"
                            class="form-select">
                    </select>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-warning fw-semibold px-4 text-white">
                        <i class="bi bi-save me-1"></i> Kaydet
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
