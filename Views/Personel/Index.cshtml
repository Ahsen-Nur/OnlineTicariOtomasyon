@model List<MVCTicariOtomasyonWeb.Models.sınıflar.Personel>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Personel Listesi";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-sm border-0">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-people-fill me-2"></i> Personel Listesi</h5>

            <a asp-controller="Personel" asp-action="YeniPersonel" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-plus-circle"></i> Yeni Personel
            </a>
        </div>

        <div class="card-body">

            <table class="table table-hover align-middle">
                <thead>
                    <tr class="table-light text-center">
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Departman</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr class="text-center">
                            <td>@p.PersonelId</td>
                            <td>@p.PersonelAd</td>
                            <td>@p.PersonelSoyad</td>
                            <td>@p.Departman.DepartmanAd</td>

                            <td>
                                @if (!string.IsNullOrWhiteSpace(p.PersonelGorsel))
                                {
                                    <img src="@p.PersonelGorsel" width="70" class="rounded shadow-sm" style="object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>

                            <td>

                                <!-- ⭐ S A T I Ş L A R  BUTONU -->
                                <a asp-controller="Personel"
                                   asp-action="Satislar"
                                   asp-route-id="@p.PersonelId"
                                   class="btn btn-info btn-sm text-white me-1"
                                   title="Satışları Gör">
                                    <i class="bi bi-bar-chart-line"></i>
                                </a>

                                <!-- Güncelle -->
                                <a asp-controller="Personel"
                                   asp-action="Guncelle"
                                   asp-route-id="@p.PersonelId"
                                   class="btn btn-warning btn-sm text-white me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <!-- Sil -->
                                <a asp-controller="Personel"
                                   asp-action="Sil"
                                   asp-route-id="@p.PersonelId"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Silinsin mi?');">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
