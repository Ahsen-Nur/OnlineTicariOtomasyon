@model MVCTicariOtomasyonWeb.Models.s覺n覺flar.Faturalar
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Fatura";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Fatura</h5>
        </div>

        <div class="card-body">

            <form asp-controller="Fatura" asp-action="YeniFatura" method="post">
                @Html.AntiForgeryToken()

                <!-- VALIDATION -->
                <div class="mb-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="FaturaSeriNo" class="form-label"></label>
                        <input asp-for="FaturaSeriNo" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="FaturaS覺raNo" class="form-label"></label>
                        <input asp-for="FaturaS覺raNo" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="VergiDairesi" class="form-label"></label>
                        <input asp-for="VergiDairesi" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">

                    <div class="col-md-6">
                        <label asp-for="Tarih" class="form-label"></label>
                        <input asp-for="Tarih" type="date" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Saat" class="form-label"></label>
                        <input asp-for="Saat" type="time" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TeslimEden" class="form-label"></label>
                    <input asp-for="TeslimEden" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="TeslimAlan" class="form-label"></label>
                    <input asp-for="TeslimAlan" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success fw-semibold">Kaydet</button>
            </form>

        </div>
    </div>

</div>
