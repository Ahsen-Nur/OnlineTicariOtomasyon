@model List<MVCTicariOtomasyonWeb.Models.sınıflar.FaturaKalem>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Fatura Detay";
}

<div class="container-fluid px-4 mt-4">

    <!-- TOPLAM TUTAR KARTI -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 text-white bg-success">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-white-50 mb-1">Fatura Toplamı</h6>
                        <h3 class="mb-0 fw-bold">
                            @Model.Sum(k => k.Tutar) ₺
                        </h3>
                    </div>
                    <i class="bi bi-calculator-fill" style="font-size: 2.5rem;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- ANA KART -->
    <div class="card shadow-sm border-0">

        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Fatura Kalemleri
            </h5>

            <a asp-controller="FaturaKalem"
               asp-action="YeniKalem"
               asp-route-faturaId="@ViewBag.FaturaId"
               class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-plus-circle"></i> Yeni Kalem
            </a>
        </div>

        <div class="card-body">

            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr class="table-light text-center">
                        <th>Açıklama</th>
                        <th>Miktar</th>
                        <th>Birim Fiyat</th>
                        <th>Tutar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr class="text-center">
                            <td>@k.Aciklama</td>
                            <td>@k.Miktar</td>
                            <td>@k.BirimFiyat ₺</td>
                            <td>@k.Tutar ₺</td>

                            <td>
                                <a asp-controller="FaturaKalem"
                                   asp-action="Guncelle"
                                   asp-route-id="@k.FaturaKalemId"
                                   class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
