@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="text-center mb-4">Giriş Yap</h4>

                @if (ViewBag.Hata != null)
                {
                    <div class="alert alert-danger">@ViewBag.Hata</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label>Mail / Kullanıcı Adı</label>
                        <input type="text" name="Mail" class="form-control" placeholder="@(ViewBag.Rol == "admin" ? "Kullanıcı Adı" : "Mail")" />
                    </div>

                    <div class="mb-3">
                        <label>Şifre</label>
                        <input type="password" name="Sifre" class="form-control" required />
                    </div>

                    <button class="btn btn-primary w-100">
                        Giriş Yap
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
