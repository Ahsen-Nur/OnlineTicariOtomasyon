@model MVCTicariOtomasyonWeb.Models.sınıflar.Departman
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Departman Güncelle";
}
<div class="container-fluid px-4 mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Departman Güncelle</h5>
        </div>
        <div class="card-body">
            <form asp-action="Guncelle" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="DepartmanId" />
                <div class="mb-3">
                    <label class="form-label">Departman Adı</label>
                    <input asp-for="DepartmanAd" class="form-control" placeholder="Departman adı" />
                    <span asp-validation-for="DepartmanAd" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary">Geri</a>
            </form>
        </div>
    </div>
</div>
