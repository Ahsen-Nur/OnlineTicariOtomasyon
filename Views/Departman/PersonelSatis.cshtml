@model List<MVCTicariOtomasyonWeb.Models.sınıflar.SatisHareket>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Personel Satışları";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <!-- Başlık -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-bar-chart-line"></i> @ViewBag.PersonelAd – Satış Listesi
            </h5>

            <a asp-controller="Departman"
               asp-action="Index"
               class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Geri
            </a>
        </div>

        <!-- İçerik -->
        <div class="card-body">

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    Bu personele ait satış bulunmuyor.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="table-light text-center">
                            <th>ID</th>
                            <th>Ürün</th>
                            <th>Cari</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr class="text-center">
                                <td>@x.SatisId</td>
                                <td>@x.Urun.UrunAd</td>
                                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                                <td>@x.Adet</td>
                                <td>@x.Fiyat</td>
                                <td>@x.ToplamTutar</td>
                                <td>@x.Tarih.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-3 text-muted small">
        © Ticari Otomasyon 2025
    </div>
</div>
