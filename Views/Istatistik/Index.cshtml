<style>
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        color: #2c3e50;
        margin: 35px 0 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title i {
        color: #5f6cff;
        font-size: 18px;
    }

    .stat-card {
        padding: 16px 18px;
        border-radius: 12px;
        background: #f8f9fb;
        box-shadow: 0 6px 18px rgba(0,0,0,0.04);
    }

    .stat-title {
        font-size: 13px;
        color: #6c757d;
        margin-bottom: 6px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
    }

    .soft-blue   { background: #e4ecff; }
    .soft-green  { background: #e3f5ea; }
    .soft-purple { background: #eee8ff; }
    .soft-orange { background: #ffefe2; }
    .soft-red    { background: #fde2e2; }
    .soft-gray   { background: #e9ecef; }

    /* ðŸ”¹ Kategorik Stok */
    .category-stock {
        margin-top: 12px;
    }

    .category-row {
        display: flex;
        align-items: center;
        font-size: 13px;
        margin-bottom: 8px;
    }

    .category-name {
        width: 110px;
        color: #495057;
    }

    .category-bar {
        flex: 1;
        height: 6px;
        background: #dee2e6;
        border-radius: 6px;
        margin: 0 10px;
        overflow: hidden;
    }

    .category-bar-fill {
        height: 100%;
        background: #5f6cff;
        border-radius: 6px;
    }

    .category-value {
        width: 40px;
        text-align: right;
        font-weight: 600;
    }
</style>

