@model MVCTicariOtomasyonWeb.Models.sınıflar.FaturaKalem
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Kalem Güncelle";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Kalem Güncelle</h5>
        </div>

        <div class="card-body">

            <form method="post">
                <input type="hidden" name="FaturaKalemId" value="@Model.FaturaKalemId" />
                <input type="hidden" name="FaturaId" value="@Model.FaturaId" />

                <label class="form-label">Açıklama</label>
                <input class="form-control" name="Aciklama" value="@Model.Aciklama" />

                <label class="form-label mt-3">Miktar</label>
                <input type="number" class="form-control" name="Miktar" value="@Model.Miktar" />

                <label class="form-label mt-3">Birim Fiyat</label>
                <input type="number" step="0.01" class="form-control" name="BirimFiyat" value="@Model.BirimFiyat" />

                <button class="btn btn-warning mt-3 fw-semibold">Güncelle</button>

            </form>

        </div>
    </div>

</div>
