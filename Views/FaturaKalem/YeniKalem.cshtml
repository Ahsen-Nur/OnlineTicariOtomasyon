@model MVCTicariOtomasyonWeb.Models.sınıflar.FaturaKalem
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Fatura Kalemi";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Kalem</h5>
        </div>

        <div class="card-body">

            <form method="post">

                <label class="form-label">Fatura ID</label>
                <input type="number" class="form-control" name="FaturaId" value="@ViewBag.FaturaId" />


                <label class="form-label">Açıklama</label>
                <input class="form-control" name="Aciklama" />

                <label class="form-label mt-3">Miktar</label>
                <input type="number" min="1" class="form-control" name="Miktar" />

                <label class="form-label mt-3">Birim Fiyat</label>
                <input type="number" step="0.01" class="form-control" name="BirimFiyat" />

                <button class="btn btn-success mt-3 fw-semibold">Kaydet</button>

            </form>

        </div>
    </div>

</div>
