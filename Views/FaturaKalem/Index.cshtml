@model List<MVCTicariOtomasyonWeb.Models.sınıflar.FaturaKalem>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Fatura Kalemleri";
}

<div class="container-fluid px-4 mt-4">

    <div class="card shadow-sm border-0">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-receipt"></i> Fatura Kalemleri
            </h5>

            <a asp-controller="FaturaKalem"
               asp-action="YeniKalem"
               class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-plus-circle"></i> Yeni Kalem
            </a>
        </div>

        <div class="card-body">

            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr class="table-light text-center">
                        <th>ID</th>
                        <th>Açıklama</th>
                        <th>Miktar</th>
                        <th>Birim Fiyat</th>
                        <th>Tutar</th>
                        <th>Fatura</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr class="text-center">

                            <td>@k.FaturaKalemId</td>
                            <td>@k.Aciklama</td>
                            <td>@k.Miktar</td>
                            <td>@k.BirimFiyat ₺</td>
                            <td>@k.Tutar ₺</td>
                            <td>@k.FaturaId</td>

                            <td>

                                <!-- GÜNCELLE -->
                                <a asp-controller="FaturaKalem"
                                   asp-action="Guncelle"
                                   asp-route-id="@k.FaturaKalemId"
                                   class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- (İsteğe bağlı) Silme işlemi -->
                                <form asp-controller="FaturaKalem"
                                      asp-action="Sil"
                                      asp-route-id="@k.FaturaKalemId"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Kalemi silmek istiyor musunuz?');">

                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <div class="text-center mt-3 text-muted small">
        © Ticari Otomasyon 2025
    </div>
</div>
